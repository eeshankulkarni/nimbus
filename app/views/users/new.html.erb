<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field(:name, class: "form-text") %>

      <%= f.label :email %>
      <%= f.text_field(:email, class: "form-text") %>

      <%= f.label :password %>
      <%= f.password_field(:password, class: "form-text") %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field(:password_confirmation, class: "form-text") %>
      
      <%= f.label :dp, "Add a display picture (optional)" %>
      <%=image_tag(@user.dp_url, height:'80', width:'80') if @user.dp?%><br>
      <%= f.file_field :dp %>
      
<br><br>
     <center> <%= f.submit "Create my account", class: "btn" %></center>
    <% end %>
  </div>
</div>